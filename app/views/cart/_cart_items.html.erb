<% @order_items.each do |item| %>
  <h3><%= item.product.name %></h3>
  <h3><%= item.product.image.price %></h3>
  <h3><%= item.product.type.price %></h3>

  <%= form_with model: item do |f| %>
    <%= f.hidden_field :product_id, value: item.product.id %>
    <%= f.number_field :quantity, value: item.quantity.to_i %>
    <%= f.submit "Update Cart" %>
    <%= link_to "Remove Items", item, method: :delete, remote: true %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_pony' %>
    <%= button_to order_item_path(item.id), method: :delete do %>
      Remove Items
    <% end %>
  <% end %>

  <h2>Subtotal: <%= item.total %></h2>
<% end %>

<h3>Your current order has a total of: <%= current_order.subtotal %></h3>