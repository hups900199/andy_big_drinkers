<div class="container">
  <h1><%= @image.name %></h1>
  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
  <% if @image.image.present? %>
    <div class="col-sm-4">
        <div class="card">
          <%= image_tag(@image.image, alt: @image.name, :class => "card-img-top") %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to @image.anime.name, @image.anime %></h5>
            <p class="card-text"><%= @image.anime.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: <%= @image.price %></li>
          </ul>
        </div>
      </div>
  <% end %>
</div>

<%= paginate @types %>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">

  <% @types.each do |type| %>
    <% if type.image.present? %>
      <div class="card text-center">
        <%= link_to image_tag(type.image, alt: type.name, size:"400x600", :class => "card-img-top"), products_find_path(:type => type, :anime => @image) %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to type.name, products_find_path(:type => type, :anime => @image), :class => "card-link" %></h5>
          <p class="card-text"><small class="text-muted">Last updated <%= distance_of_time_in_words(type.updated_at, Date.today) %> ago</small></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price: <%= type.price %></li>
        </ul>
      </div>
    <% end %>
  <% end %>

  </div>
</div>