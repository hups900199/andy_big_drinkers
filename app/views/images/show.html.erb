<div class="container">
<h1><%= @image.name %></h1>
<ul>
  <li>Anime Title: <%= link_to @image.anime.name, @image.anime %></li>
  <li>Description: <%= @image.anime.description %></li>
  <% if @image.image.present? %>
      <div class="card-image">
        <figure class="image">
          <%= image_tag @image.image %>
        </figure>
      </div>
  <% end %>
</ul>
</div>