<div class="container">
  <h1><%= @image.name %></h1>
  <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(@image.updated_at) %> ago</small></p>
  <% if @image.image.present? %>
    <div class="col-sm-4">
        <div class="card">
          <%= image_tag(@image.image, alt: @image.name, :class => "card-img-top") %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to @image.anime.name, @image.anime %></h5>
            <p class="card-text"><%= @image.anime.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: <%= @image.price %></li>
          </ul>
        </div>
      </div>
  <% end %>
</div>

<%= paginate @types %>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">

  <%= render @types %>

  </div>
</div>