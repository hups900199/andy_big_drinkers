<div id="intro" class="p-5 text-center">
  <h1 class="mb-0">Images</h1>
</div>

<%= paginate @images %>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">

  <% @images.each do |image| %>
    <div class="card text-center">
      <% if image.image.present? %>
        <%= link_to image_tag(image.image, alt: image.name, size:"400x600", :class => "card-img-top"), image %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to image.name, image %></h5>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: <%= image.price %></li>
      </ul>
      <div class="card-body">
        <a href="#" class="btn btn-primary">Add to Cart</a>
      </div>
    </div>
  <% end %>

  </div>
</div>